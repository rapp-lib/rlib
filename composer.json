{
    "name": "rapp-lib/rlib",
    "description": "Simple webapp library",
    "type": "library",
    "license": "MIT",
    "require": {
        "smarty/smarty": "v3.*@stable",
        "doctrine/dbal": "2.*@stable",

        "pear/http_request2": "v2.*@stable",
        "pear/mail": "v1.*@stable",
        "pear/mail_mime": "v1.*@stable"
    },
    "autoload": {
        "psr-4": {
            "R\\Lib\\": "lib/"
        },
        "files": [
            "functions/required.php"
        ]
    },
    "include-path":[
        "include/"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "suggest": {
        "ezyang/htmlpurifier": "Install optionally via your project's composer.json"
    }
}