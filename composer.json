{
    "name": "rapp-lib/rlib",
    "description": "Simple webapp library",
    "type": "library",
    "license": "MIT",
    "require": {
        "smarty/smarty": "v3.*@stable",
        "swiftmailer/swiftmailer": "v5.*@stable",
        "doctrine/dbal": "v2.3.*@stable",
        "pear/http_request2": "v2.2.1",
        "pear/mail": "v1.3.0",
        "pear/mail_mime": "v1.10.0"
    },
    "autoload": {
        "psr-4": {
            "R\\Lib\\": "lib/",
            "R\\Plugin\\": "plugins/",
            "R\\Util\\": "util/",

            "\\": "ext/include/",

            "R\\Lib\\Form\\Rule\\": "plugins/Form/Rule/",
            "R\\Lib\\Form\\Input\\": "plugins/Smarty/InputType/",
            "R\\Lib\\Query\\Search\\": "plugins/DBI/SearchType/"
        },
        "files": [
            "functions/array.php",
            "functions/html.php",
            "functions/path.php",
            "functions/webapp.php",
            "functions/date.php",
            "functions/string.php",
            "functions/file.php",
            "functions/modules.php",
            "functions/report.php",
            "functions/vars.php",
            "functions/lib_db.php",
            "functions/lib_smarty.php"
        ]
    },
    "include-path":[
        "ext/include/",

        "../../pear/pear_exception",
        "../../pear/net_url2",
        "../../pear/http_request2",
        "../../pear/mail"
    ]
}